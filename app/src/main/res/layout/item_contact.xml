<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/image_user"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:src="@drawable/user"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"/>

    <TextView
        android:id="@+id/text_name"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="@string/text_temp"
        android:textSize="@dimen/sp_18"
        app:layout_constraintStart_toEndOf="@id/image_user"
        app:layout_constraintEnd_toStartOf="@id/image_star"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_10"/>

    <TextView
        android:id="@+id/text_phone"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:text="@string/text_temp"
        android:textSize="@dimen/sp_16"
        app:layout_constraintEnd_toEndOf="@id/text_name"
        app:layout_constraintStart_toStartOf="@id/text_name"
        app:layout_constraintTop_toBottomOf="@id/text_name" />

    <ImageView
        android:id="@+id/image_star"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:src="@drawable/yellow_star"
        app:layout_constraintTop_toTopOf="@id/image_call"
        app:layout_constraintBottom_toBottomOf="@id/image_call"
        app:layout_constraintEnd_toStartOf="@id/image_call"
        android:layout_marginEnd="@dimen/dp_10"/>

    <ImageView
        android:id="@+id/image_call"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:src="@drawable/phone_call"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="@dimen/dp_10"/>

</android.support.constraint.ConstraintLayout>
